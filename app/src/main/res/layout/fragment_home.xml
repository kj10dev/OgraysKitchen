<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.HomeFragment"
    android:gravity="center_horizontal">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_specials"
        android:layout_width="112dp"
        android:clickable="true"
        android:layout_height="113dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:padding="5dp"
            android:text="Special of the day"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:src="@drawable/discount" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_starters"
        android:layout_width="112dp"
        android:clickable="true"
        android:layout_height="113dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starters/sides"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_gravity="center|top"
            android:padding="5dp"/>

        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/bread"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_mains"
        android:layout_width="112dp"
        android:layout_height="113dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main meals"
            android:layout_gravity="center|top"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_marginTop="15dp"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/chicken"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="112dp"
        android:layout_height="113dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:id="@+id/cv_desserts"
        app:cardElevation="10dp">

        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/desserts"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desserts"
            android:textStyle="bold"

            android:layout_gravity="center|top"
            android:layout_marginTop="10dp"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>