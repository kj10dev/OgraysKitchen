<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ProfileFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="15dp"
            android:text="Kojo Ahyia-Osae"
            android:textSize="28sp" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@tools:sample/avatars" />


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="2"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvFravourites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fravourites"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="61dp"
            tools:layout_editor_absoluteY="19dp" />

        <ImageView
            android:id="@+id/ivFravourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_ff"
            tools:layout_editor_absoluteX="61dp"
            tools:layout_editor_absoluteY="46dp" />

        <TextView
            android:id="@+id/tvWallets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wallets"
            tools:layout_editor_absoluteX="182dp"
            tools:layout_editor_absoluteY="16dp" />

        <ImageView
            android:id="@+id/ivWallets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_ff"
            tools:layout_editor_absoluteX="189dp"
            tools:layout_editor_absoluteY="46dp" />

        <TextView
            android:id="@+id/tvOrders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orders"
            tools:layout_editor_absoluteX="293dp"
            tools:layout_editor_absoluteY="16dp" />

        <ImageView
            android:id="@+id/ivOrders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_ff"
            tools:layout_editor_absoluteX="293dp"
            tools:layout_editor_absoluteY="46dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/settingsRecycView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:itemCount="10"
            tools:listitem="@layout/card_view_design_settings"
            android:padding="8dp"/>


    </LinearLayout>


</LinearLayout>